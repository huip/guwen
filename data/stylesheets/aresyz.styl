border-style = 1px solid #eee
#main
	margin 50px 15% 0 15%

.login
	margin 30px auto
	width 70%
	height 30%
	padding-top 4em
	padding-bottom 3em
	border-radius 0.5em
	border-shadow 0 1px 0 #f2f4f5
	border border-style
	background #fff

#login-btn
	margin-left 0.4em
	
.error-tip
	margin -15px 0 0 0 !important
	line-height  1em
	height 1em

#question_wrap
#unanswer_wrap
#hotest_wrap
	height auto
	min-height 2em
	padding 0.2em
	margin-top 1em
	border border-style
	border-radius 5px
	.clearSpan
		clear both
	.li_one
		width 100%
		float left
		display block
		margin-top 0.5em
		position relative

ul
	list-style-type none
	margin-bottom 0

.clearSpan
	clear both

.span_reward
.span_watch
	width 12%
	padding 0 10px 0 10px

.topic_li
	height auto
	border border-style
	border-radius 5px
	padding 0.5em
	margin-top 0.5em

.topic_li_li
	height auto

.topic_li hr
	margin 0.5em 0 0.5em 0

.topic_a
	display block
	margin-bottom 0.5em

.topic_a_a
	padding-left 0
	padding-right 0

.topic_time
	width 30%
	float right
	display block
	text-align right
	margin 0px	

.qinfo_ul
	border border-style
	border-radius 5px
	@li
		width 100%
		display block
		margin 0 0 10px 0
		float left
		@h2
			margin-bottom 0
		@p
			margin-bottom 0
		@span
			padding-left 0
		@span[name=qinfo_span1]
			width 18%
		@span[name=qinfo_span2]
		@span[name=qinfo_span3]
			width 18%
			padding-left 10px
		@span[name=qinfo_span4]
			width 30%
			float right







